                    ]
                }
            },
            "targets": {
                "linux": {
                    "!upstream": [
                        {
                            "name": "aws-c-common"
                        }
                    ]
                }
            }
        }
    },
    "test_steps": [
        "test",
        "elasticurl-tests"
    ]
}
