{
    "name": "aws-crt-cpp",
    "hosts": {
        "manylinux": {
            "architectures": {
                "x86": {
                    "!yum_compiler_packages": []
                }
            }
        }
    },
    "build_steps": [
        "build-crt"
    ],
    "env": {
        "AWS_TEST_MQTT5_DIRECT_MQTT_HOST": "localhost",
        "AWS_TEST_MQTT5_DIRECT_MQTT_PORT": "1883"
    },
    "variants": {
        "openssl": {
            "hosts": {
                "ubuntu": {
                    "packages": [
                        "libssl-dev"
                    ]
                }
            }
        }
    },
    "+cmake_args": [
        "-DAWS_HAS_CI_ENVIRONMENT=ON"
    ],
    "test_steps": [
        "crt-ci-prep",
        "test",
        "elasticurl-tests"
    ]
}
