{
    "name": "aws-crt-cpp",
    "+cmake_args": [
        "-DS2N_NO_PQ_ASM=ON",
        "-DAWS_WARNINGS_ARE_ERRORS=ON"
    ],
    "hosts": {
        "manylinux": {
            "architectures": {
                "x86": {
                    "!yum_compiler_packages": []
                }
            }
        }
    },
    "targets": {
        "_comment": "enable header-check on specific platforms. can't enable everywhere because it fails on iOS due to 'Bundle identifier is missing'",
        "linux": { "+cmake_args": ["-DPERFORM_HEADER_CHECK_CXX=ON"] },
        "windows": { "+cmake_args": ["-DPERFORM_HEADER_CHECK_CXX=ON"] },
        "macos": { "+cmake_args": ["-DPERFORM_HEADER_CHECK_CXX=ON"] }
    },
    "test_steps": [
        "test",
        "elasticurl-tests"
    ]
}
