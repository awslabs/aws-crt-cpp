{
    "name": "aws-crt-cpp",
    "!cmake_args": [
        "-DBUILD_DEPS=ON",
        "-DPERFORM_HEADER_CHECK_CXX=ON",
        "-DS2N_NO_PQ_ASM=ON"
    ],
    "compilers": {
        "clang": {
            "versions": {
                "_comment": "TODO aws-crt-builder should do this automatically",
                "3": {
                    "apt_compiler_packages": ["libc++-3.9-dev", "libc++abi-3.9-dev"]
                },
                "6": {
                    "apt_compiler_packages": ["libc++-6-dev", "libc++abi-6-dev"]
                },
                "8": {
                    "apt_compiler_packages": ["libc++-8-dev", "libc++abi-8-dev"]
                },
                "9": {
                    "apt_compiler_packages": ["libc++-9-dev", "libc++abi-9-dev"]
                }
            }
        }
    },
    "hosts": {
        "manylinux": {
            "architectures": {
                "x86": {
                    "!yum_compiler_packages": []
                }
            }
        }
    },
    "test_steps": [
        "test",
        [
            "{python}",
            "{project_dir}/crt/aws-c-http/integration-testing/http_client_test.py",
            "{install_dir}/bin/elasticurl_cpp{exe}"
        ]
    ]
}
