{
    "name": "aws-crt-cpp",
    "hosts": {
        "manylinux": {
            "architectures": {
                "x86": {
                    "!yum_compiler_packages": []
                }
            }
        }
    },
    "build_steps": [
        "build-crt"
    ],
    "variants": {
        "openssl": {
            "hosts": {
                "ubuntu": {
                    "packages": [
                        "libssl-dev"
                    ]
                }
            }
        }
    },
    "+cmake_args": [
        "-DAWS_HAS_CI_ENVIRONMENT=ON"
    ],
    "test_steps": [
        "crt-ci-prep",
        "debug-test",
        "elasticurl-tests"
    ],
    "build_env": {
        "LSAN_OPTIONS": "suppressions={source_dir}/tests/resources/suppressions-lsan.txt:detect_leaks=0"
    }
}
